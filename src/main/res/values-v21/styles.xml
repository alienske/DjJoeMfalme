<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor">@color/red_darker</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>

        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
    </style>

    <!-- Style for the main container of an activity, handle top offset !-->
    <style name="AppTheme.MainContainer">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
</resources>